{
  "compilerOptions": {
    /* === Core Settings === */
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    /* === React + Next.js === */
    "jsx": "react-jsx",
    "allowJs": true,
    "incremental": true,
    "types": [
      "node",
      "react",
      "react-dom"
    ],
    /* === Strictness === */
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    /* === Helpful Developer Flags === */
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    /* === Plugins === */
    "plugins": [
      {
        "name": "next"
      }
    ],
    "esModuleInterop": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next\\dev/types/**/*.ts",
    ".next\\dev/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
